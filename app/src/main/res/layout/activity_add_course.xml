<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="@drawable/signup2"
   android:orientation="vertical"
    android:gravity="center_horizontal"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Course"
        android:textSize="40dp"
        android:textColor="#111"/>

    <EditText
        android:id="@+id/cource_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter course id"
        android:maxLines="1"
        android:layout_margin="10dp"
        android:background="@drawable/rounded_stroke"
        android:singleLine="true"
        android:padding="5dp" />

    <EditText
        android:id="@+id/course_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:layout_marginTop="10dp"
        android:maxLines="1"

        android:layout_margin="10dp"
        android:background="@drawable/rounded_stroke"
        android:singleLine="true"
        android:hint="course_name"
        android:padding="5dp" />

    <EditText
        android:id="@+id/course_duration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/rounded_stroke"
        android:layout_marginTop="10dp"
        android:hint="course duration in months"
        android:padding="5dp"
        android:inputType="number"
        android:singleLine="true"
        android:maxLines="1"
        android:imeOptions="actionNext"/>

    <Spinner
        android:id="@+id/spintestAdd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:popupBackground="@android:color/white"
        android:scrollbars="none"
        android:spinnerMode="dropdown" />
    <EditText
        android:id="@+id/tutor_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/rounded_stroke"
        android:layout_marginTop="10dp"
        android:hint="Tutor name"
        android:enabled="false"
        android:padding="5dp" />



    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="#1f2b78"
        android:text="Add course content"
        android:id="@+id/add_btn"
        android:textColor="#fff"
        android:textStyle="bold"

        />
</LinearLayout>
